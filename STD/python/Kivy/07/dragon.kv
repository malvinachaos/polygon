<MegaLabel@MDLabel>:
    font_size: '25sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size

<MDCard>:
    padding: "8dp"
    size_hint: None, None
    size: "280dp", "180dp"
    MDLabel:
    MDSeparator:
        height: "1dp"
    MDLabel:
        text: "Body"

<FirstScreen>:
    name: "FST"
    MDLabel:
        text: 'Welcome to some app'
        pos_hint: {'center_y': 0.75, 'center_x': 0.825}
    MDRaisedButton:
        text: 'START THE APP'
        pos_hint: {'center_y': 0.5, 'center_x': 0.5}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'SND'
    MDRoundFlatButton:
        text: 'EXIT'
        pos_hint: {'center_y': 0.125, 'center_x': 0.5}
        on_press:
            EventLoop: exit()

<Container>:
    name: "SND"
        
    tomboy: text_input
    l_widget: label
    anime: clear_button

# -----------------------------------------------------------------------------
    FloatLayout:
        size_hint: 0.9, 1
        MDTextField:
            id: text_input
            multiline: False
            pos_hint: {'center_y': 0.95, 'center_x': 0.55}
            hint_text: "Введи число"
            font_size: '20sp'
            input_type: 'number'
            input_filter: 'int'
# -----------------------------------------------------------------------------
    BoxLayout:
        padding: 15, 24, 0, 0
        MegaLabel:
            id: label
            text: 'Need Tomboy'
        
        MDFlatButton:
            id: clear_button
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            text: 'Clear text'
            font_size: '20sp'
            on_release: root.cls_text()
# -----------------------------------------------------------------------------
    FloatLayout:
        MDRaisedButton:
            size_hint: 0.5, 0.125
            text: 'Calculate'
            pos_hint:{'center_x': 0.5, 'y': 0.2}
            font_size: 40
            on_release: root.ch_text()
# -----------------------------------------------------------------------------
    MDRaisedButton:
        text: 'Back to the future'
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'FST'
# -----------------------------------------------------------------------------
    MDFlatButton:
        text: 'Foward to the past'
        pos_hint: {'center_x': 0.8}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'NUDES'
# -----------------------------------------------------------------------------

<ThirdScreen>:
    name: 'NUDES'

# -----------------------------------------------------------------------------
    MDRectangleFlatButton:
        text: 'Where?'
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'SND'
# -----------------------------------------------------------------------------
    GridLayout:
        cols: 2
        rows: 3

        MDCard:
            MDLabel:
                text: "Henlo"
                size_hint_y: None
                height: self.texture_size[1]
        MDCard:
            MDLabel:
                text: "Goodbye"
                size_hint_y: None
                height: self.texture_size[1]
        MDCard:
            MDLabel:
                text: "What"
                size_hint_y: None
                height: self.texture_size[1]
        MDCard:
            MDLabel:
                text: "If"
                size_hint_y: None
                height: self.texture_size[1]
        MDCard:
            MDLabel:
                text: "Your name"
                size_hint_y: None
                height: self.texture_size[1]
        MDCard:
            MDLabel:
                text: "ID"
                size_hint_y: None
                height: self.texture_size[1]
