# В кв файлах также важны отступы и регистр букв
<MyWidget>:
	# Слева сама переменная, справа -- её id для использования в kv файле
	text1: name
	text2: surn

	BoxLayout:
		orientation: "horizontal"
		# ОЧ ВАЖНО, УСТАНАВЛИВАЕТ НОМРАЛЬНЫЕ РАЗМЕРЫ
		size: root.width, root.height
		
		BoxLayout:
			spacing: 10
			orientation: "vertical"
			Label:
				text: "This is who I am"
				size_hint: .5, .05
			TextInput:
				id: name
				size_hint: .5, .5
				multiline: False
			Button:
				size_hint: .5, .25
				text: "Submit"
				background_color: 1, 0, 0, 1
				# Тут мы биндим кнопку
				on_press: root.press()
			
		BoxLayout:
			spacing: 10
			orientation: "vertical"
			Label:
				text: "Try to understand"
				size_hint: .75, .05
			TextInput:
				id: surn
				size_hint: .75, .5
				multiline: False
			Button:
				size_hint: 1, .25
				text: "Understand"
				background_color: 1,1,.75,1
				on_press: root.press()
			
