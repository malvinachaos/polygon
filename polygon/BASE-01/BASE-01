    # 
    while True:
        choose = input(": ")
        if choose not in man:
            print("Вы неверно ввели данные")
        else: break
    choose = choose + ".txt" if (".txt" not in choose) else choose
    with open("manuals/" + choose, 'r') as F:
        print(F.read())

