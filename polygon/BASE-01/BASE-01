#! /usr/bin/python3
'''
    OS.PATH!!!
'''
from os import system as S
S("clear")

# ---------------------------[Запуск программы]--------------------------------
# Титульный экран
print("\n\tBASE-01 v0.1 25.03.2020\n\n\tMADE BY SPACE UNICORN!")
S("sleep 2s")
S("clear")

# Генерация списка пограмм
PROGRAMS = []
S("ls manuals/ > list")
with open('list', 'r') as F:
    l = ''
    while True:
        l = F.readline()
        if l == '': break
        else: PROGRAMS.append(l[:-5])

# ---------------------------[Блок функций]------------------------------------

# Функция выбора программы
def choose_program():
    for i in PROGRAMS:
        print(i)
    while True:
        choose = input(": ")
        if choose not in PROGRAMS:
            print("Вы неверно ввели данные")
        else: break
    return choose

# Вызов справки
def manual():
    global PROGRAMS
    print("О какой программе хотите узнать?")
    choose = choose_program()
    choose = 'manuals/' + choose + ".txt" if (".txt" not in choose) else choose
    with open(choose, 'r') as F:
        print(F.read())
    S("clear")

# Запуск программы
def program():
    global PROGRAMS
    print("Какую программу хотите запустить?")
    choose = choose_program()
    pass


# ---------------------------[Главный исполнительный блок]---------------------
# Проверка работоспособности функций
# manual()
# program()
