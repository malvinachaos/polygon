WindowManager:
	MainMenu:
	PartyMenu:

<MainMenu>:
	name: "main"
	BoxLayout:
		orientation: "vertical"

		Image:
			source: "data/menu/LOGO.gif"
			size: self.texture_size

		# To <PartyMenu>
		Button:
			size_hint: .25, .5
			pos_hint: {"x": .375, "y": 1}
			text: "Start"
			on_release:
				print("Click is working\t", app.root.current)
				app.root.current = "party"
				root.manager.transition.direction = "left"
		# To <Player>
		Button:
			size_hint: .25, .5
			pos_hint: {"x": .375, "y": 1}
			text: "Players"
		# Close app
		Button:
			size_hint: .25, .5
			pos_hint: {"x": .375, "y": 1}
			text: "Exit"
			on_release:
				EventLoop: exit()

<PartyMenu>:
	name: "party"
	FloatLayout:
		# Back to <MainMenu>
		Button:
			size_hint: .25, .25
			text: "Back"
			on_release:
				app.root.current = "main"
				root.manager.transition.direction = "right"

		# Create Game Party
		Button:
			size_hint: .2, .25
			pos_hint: {"x": .8}
			text: "Create new party"

<PartyEditor>:
    title: "Create new party"
    content:
        FloatLayout:
            TextInput:
                id: PARTYNAME
                multiline: False
